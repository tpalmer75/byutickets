mixin secondaryMenuItem(title, num)
	li
		a(href='#') #{title}
		ul.sub
			mixin addListLinks(1,4)


mixin addListLinks(start, end, title)
	- if (title == undefined) title = 'Menu item';
	- for (var i = start; i <= end; i++) {
		li: a(href='') #{title} #{i}
	- }

mixin addLinks(start, end, title)
	- if (title == undefined) title = 'Menu item';
	- for (var i = start; i <= end; i++) {
		a(href='') #{title} #{i}
	- }
	





